{
  "manifest_version": 3,
  "name": "SOS",
  "version": "1.0.0",
  "description": "Local injector for SIS Dashboard",

  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://efundi.nwu.ac.za/portal/site/*"
      ],
      "js": [
        "sites/efundi/gradebook/init.js",
        "sites/efundi/gradebook/main.js",
        "sites/efundi/gradebook/main_unfiltered.js"
      ]
    },
    {
      "matches": ["https://efundi.nwu.ac.za/portal/*"],
      "js": ["sites/efundi/efundi.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://sisportal-100997.campusnexus.cloud/CMCPortal/Secure/links/Dashboard.aspx"
      ],
      "js": ["sites/sis/dashboard.js"],
      "all_frames": true
    },
    {
      "matches": [
        "https://sisportal-100997.campusnexus.cloud/CMCPortal/secure/links/Academic.aspx?sm=7"
      ],
      "js": ["sites/sis/academicRecord.js"],
      "all_frames": true
    },
    {
      "matches": [
        "https://sisportal-100997.campusnexus.cloud/CMCPortal/secure/Student/Acad/MyGrades.aspx?sm=11"
      ],
      "js": ["sites/sis/myGrades.js"],
      "all_frames": true
    },
    {
      "matches": [
        "https://sisportal-100997.campusnexus.cloud/CMCPortal/secure/Student/Acad/MyGrades.aspx?sm=11"
      ],
      "js": ["sites/sis/blank.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://sisportal-100997.campusnexus.cloud/CMCPortal/secure/links/Curriculum.aspx?sm=6", "https://sisportal-100997.campusnexus.cloud/CMCPortal/secure/links/Registration.aspx?sm=26"
      ],
      "js": ["sites/sis/registration.js"],
      "all_frames": true
    },
    {
      "matches": [
        "https://sisportal-100997.campusnexus.cloud/CMCPortal/secure/Student/Acad/ClassResources.aspx?sm=5", "https://sisportal-100997.campusnexus.cloud/CMCPortal/secure/Student/Acad/ClassResources.aspx?sm=11"
      ],
      "js": ["sites/sis/classResource.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["Links_files/saved_resource.html", "academicRecord/AcademicRecordPortal.html"],
      "matches": ["https://sisportal-100997.campusnexus.cloud/*"]
    },
    {
      "resources": ["sites/sis/index.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_title": "SOS",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  }
}
